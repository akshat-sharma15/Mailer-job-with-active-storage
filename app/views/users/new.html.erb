<div class="container">
  <h2>Registration Form</h2>
  <%= form_with model: @user do |form| %>

  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control' %> 
    <% @user.errors.full_messages_for(:first_name).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.text_area :email, class: 'form-control' %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :dob %><br>
    <%= form.text_field :dob, class: 'form-control' %> 
    <% @user.errors.full_messages_for(:dob).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :otp %><br>
    <%= form.text_field :otp, class: 'form-control' %> 
    <% @user.errors.full_messages_for(:dob).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>
  
  <div>
      <%= form.label :avatar %>
      <%= form.file_field :avatar %>
  </div>

  <div class="form-group">
    <%= form.submit class: "submit-btn" %>
  </div>
    
  <% end %>
</div>
